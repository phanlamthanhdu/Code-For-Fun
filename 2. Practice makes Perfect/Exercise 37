#include <iostream>
#include <iomanip>
#include <cmath>
using namespace std;

int main()
{
  int n, x, i{2}, j;
  long long T{1}, GT{1};
  long double S{0};

  cin >> n;

  for(i; i <= n; i++)
  { 
    S = pow(i + S, (double)1/i);
  }
  cout << setprecision(2) << S;
  return 0;
}
